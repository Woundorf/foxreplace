{

  "manifest_version": 2,
  "name": "FoxReplace",
  "version": "1.0.0",
  "default_locale": "en",

  "background": {
    "scripts": ["background.js"]
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["xregexp-all-min.js", "core.js", "replace.js", "content.js"],
      "all_frames": true,
      "run_at": "document_end"
    }
  ]

}
